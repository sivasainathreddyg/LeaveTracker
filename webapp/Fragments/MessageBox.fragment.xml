<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="Messageboxs">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Text text="MessageBox"/>
                </contentLeft>
                <contentRight>
                    <Button text="Copy" icon="sap-icon://copy" press="HandleCopyText"/>
                </contentRight>
                
            </Bar>
        </customHeader>
        <content>
        <VBox  id="contentVBox" class="sapUiSmallMargin">
          <Text id="Recipentname" renderWhitespace="true" text="Hello," />

          <Text text=""></Text>
           <!-- <Text text="{i18n>sample}"></Text> -->

            <Text text="{/content}"></Text>
            <Text text=""></Text>

          <Text text="Sincerely" />
          <Text id="FullName" text="{/Fullname2}" />
          </VBox>

        </content>
        <endButton>
        <Button text="Close" press="CloseMessagebox"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
