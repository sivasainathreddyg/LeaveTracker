<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">

<form:SimpleForm id="loginForm">
   <form:content>

      <Label text="Email" required="true"></Label>
      <Input placeholder="Email" id="loginEmailInput" type="Email" />

      <Label text="Password" required="true"></Label>
      <Input placeholder="Password" id="loginPasswordInput" type="Password" />

   </form:content>
   </form:SimpleForm >
   <HBox >
   <Button text="Login" press="onLoginPress"   class="sapUiMediumMarginBegin"/>
    <Link text="Don't have an account? Sign Up" press="onSwitchToSignUpPress" class="sapUiTinyMarginBegin sapUiTinyMarginTop" />
    </HBox>
        
</core:FragmentDefinition>`


